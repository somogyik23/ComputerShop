<Window x:Class="Computershop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="449" Width="371" WindowStartupLocation="CenterScreen" Background="#FFF5F5F5">
    <Grid Margin="0,0,0,11">
        <Border Background="White" CornerRadius="14" Padding="28" BorderBrush="#D32F2F" BorderThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center" Height="379">
            <StackPanel>
                <TextBlock Text="Bejelentkezés" FontSize="24" FontWeight="Bold" Foreground="#D32F2F" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                <TextBlock Text="Kérlek add meg a felhasználóneved és jelszavad!" Foreground="#888" FontSize="13" Margin="0,0,0,18" HorizontalAlignment="Center"/>

                <TextBlock Text="Felhasználónév" FontSize="12" Foreground="#444"/>
                <TextBox x:Name="UsernameTextBox" Height="32" Margin="0,4,0,12" FontSize="14" BorderBrush="#D32F2F" BorderThickness="1"/>

                <TextBlock Text="Jelszó" FontSize="12" Foreground="#444"/>
                <Grid Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox x:Name="PasswordHidden" Grid.Column="0" Height="32" FontSize="14" BorderBrush="#D32F2F" BorderThickness="1"/>
                    <TextBox x:Name="PasswordVisible" Grid.Column="0" Height="32" FontSize="14" BorderBrush="#D32F2F" BorderThickness="1" Visibility="Collapsed"/>
                    <ToggleButton x:Name="ShowPasswordToggle" Grid.Column="1" Width="36" Height="32" Margin="6,0,0,0" VerticalAlignment="Center"
                                  ToolTip="Jelszó mutatása" Checked="ShowPasswordToggle_Checked" Unchecked="ShowPasswordToggle_Unchecked"
                                  Background="Transparent" BorderThickness="0">
                        <Viewbox>
                            <Canvas Width="24" Height="24">
                                <Path Data="M1,12 C1,12 5,4 12,4 C19,4 23,12 23,12 C23,12 19,20 12,20 C5,20 1,12 1,12 Z M12,8 C10,8 9,9 9,11 C9,13 10,14 12,14 C14,14 15,13 15,11 C15,9 14,8 12,8 Z"
                                      Fill="#D32F2F"/>
                            </Canvas>
                        </Viewbox>
                    </ToggleButton>
                </Grid>

                <CheckBox x:Name="RememberMeCheck" Content="Emlékezz rám" Foreground="#D32F2F" Margin="0,12,0,0"/>

                <Button Content="Bejelentkezés" Click="LoginButton_Click" Margin="0,18,0,0"
                        Height="38" FontSize="15" FontWeight="SemiBold"
                        Background="#D32F2F" Foreground="White" BorderBrush="#D32F2F" BorderThickness="1"
                        Cursor="Hand"/>

                <TextBlock x:Name="ErrorTextBlock" Foreground="#D32F2F" FontSize="13" Margin="0,12,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>